<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bottomsheetResultIv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bottomsheetResultTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:fontFamily="@font/dmsans"
        android:textColorLink="?attr/colorOnSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="#test #test #test #test #test #test #test #test #test #test #test #test #test #test #test #test "
        tools:textColor="?attr/colorOnSurface" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottomsheetResultBtnCopy"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/copy_hashtags" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bottomsheetResultBtnInsta"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:enabled="false"
            android:text="@string/post_to_insta" />

    </LinearLayout>

</LinearLayout>